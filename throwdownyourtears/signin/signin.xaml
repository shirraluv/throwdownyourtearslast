<Page x:Class="throwdownyourtears.signin.signin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:throwdownyourtears.signin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="signin">

    <Grid Cursor="AppStarting">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Name="_111" Height="40" Source="/signin/user-interface.png"  Visibility="Visible" Width="46"/>
            <Label HorizontalAlignment="Center" Content="Вход"/>
            <Label Content="Логин"/>
            <TextBox MinWidth="200" Text="{Binding Login}"/>

            <Label Content="Пароль"/>
            <TextBox Text="{Binding Password}"/>
            <Label Content=" " Height="11"/>
            <Button Margin="0 5 0 0" Content="Войти" Click="signin1"/>
            <Label Content=" " Height="6"/>
            <Button Margin="0 5 0 0" Content="Регистрация" Click="reg"/>
            
        </StackPanel>

    </Grid>
</Page>
