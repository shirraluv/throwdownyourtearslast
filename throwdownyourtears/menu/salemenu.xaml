<Page x:Class="throwdownyourtears.menu.salemenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:throwdownyourtears.menu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Продажа продукта">
    <StackPanel>
        <TextBlock Background="LightGreen" Text="Продукт" Width="319"/>
        <TextBlock Background="LightSkyBlue" Text="{Binding AddData.Name}" Width="320"/>
        <TextBlock Background="LightGreen" Text="Количество" Width="319"/>
        <TextBlock x:Name="tb" Background="LightSkyBlue" Text="{Binding AddData.Productsales}" Width="319"/>
        <Button  Margin="440,-32, 100.5,10" FontFamily="Segoe UI Black" FontWeight="UltraBlack" FontStyle="Normal" FontSize="16"  FlowDirection="LeftToRight" Background="LightPink" Content="+"  Click ="sale" Width="22" Height="34" RenderTransformOrigin="10.11,-0.302"/>
        <Button FontFamily="Segoe UI Black" FontWeight="UltraBlack" FontStyle="Normal" FontSize="16"  FlowDirection="LeftToRight" Background="LightPink" Content="Сохранить" Click ="Save" Width="146"/>

    </StackPanel>

</Page>